<div class="section" id="Post">
	<div class="section_content">
		<p class="breadcrumb"><a href="<%- url_for() %>"><%= isArticle ? __(theme.article_breadcrumb) : __(theme.page_breadcrumb) %></a> / <%= (page.title == "" ? "no-title" : page.title) %></p>
		<div class="page_content mdcss">
			<%- page.content %>
		</div>
	</div>

	<% if (theme.duoshuo != null) { %>
	<!-- 多说评论框 start -->
	<div class="ds-thread" data-thread-key="<%= page.path %>" data-title="<%= page.title %>" data-url="<%= page.permalink %>"></div>
	<!-- 多说评论框 end -->
	<!-- 多说公共JS代码 start (一个网页只需插入一次) -->
	<script type="text/javascript">
	var duoshuoQuery = {short_name:"<%= theme.duoshuo %>"};
		(function() {
			var ds = document.createElement('script');
			ds.type = 'text/javascript';ds.async = true;
			ds.src = (document.location.protocol == 'https:' ? 'https:' : 'http:') + '//static.duoshuo.com/embed.js';
			ds.charset = 'UTF-8';
			(document.getElementsByTagName('head')[0]
			|| document.getElementsByTagName('body')[0]).appendChild(ds);
		})();
	</script>
	<!-- 多说公共JS代码 end -->
	<% } %>

	<% if (theme.disqus != null) { %>
	<div id="disqus_thread"></div>
